@model Movies.Models.Order

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order no.@Model.Id</h4>
<h5>Created on @Model.DateCreated.ToString("yyyy-MM-dd")</h5>
<hr />
<div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Total" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="DateCreated" />
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col"><label asp-for="BillingFirstName" class="control-label"></label></th>
                        <th scope="col"><label asp-for="BillingLastName" class="control-label"></label></th>
                        <th scope="col"><label asp-for="BillingEmail" class="control-label"></label></th>
                        <th scope="col"><label asp-for="BillingPhone" class="control-label"></label></th>
                        <th scope="col"><label asp-for="BillingAddress" class="control-label"></label></th>
                        <th scope="col"><label asp-for="BillingCity" class="control-label"></label></th>
                        <th scope="col"><label asp-for="BillingPostalCode" class="control-label"></label></th>
                        <th scope="col"><label asp-for="BillingCountry" class="control-label"></label></th>
                    </tr>
                </thead>
                <tbody>
                    <td>
                        <input asp-for="BillingFirstName" class="form-control" />
                        <span asp-validation-for="BillingFirstName" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="BillingLastName" class="form-control" />
                        <span asp-validation-for="BillingLastName" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="BillingEmail" class="form-control" />
                        <span asp-validation-for="BillingEmail" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="BillingPhone" class="form-control" />
                        <span asp-validation-for="BillingPhone" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="BillingAddress" class="form-control" />
                        <span asp-validation-for="BillingAddress" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="BillingCity" class="form-control" />
                        <span asp-validation-for="BillingCity" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="BillingPostalCode" class="form-control" />
                        <span asp-validation-for="BillingPostalCode" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="BillingCountry" class="form-control" />
                        <span asp-validation-for="BillingCountry" class="text-danger"></span>
                    </td>
                </tbody>
            </table>
            <hr />
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col"><label asp-for="ShippingFirstName" class="control-label"></label></th>
                        <th scope="col"><label asp-for="ShippingLastName" class="control-label"></label></th>
                        <th scope="col"><label asp-for="ShippingEmail" class="control-label"></label></th>
                        <th scope="col"><label asp-for="ShippingPhone" class="control-label"></label></th>
                        <th scope="col"><label asp-for="ShippingAddress" class="control-label"></label></th>
                        <th scope="col"><label asp-for="ShippingCity" class="control-label"></label></th>
                        <th scope="col"><label asp-for="ShippingPostalCode" class="control-label"></label></th>
                        <th scope="col"><label asp-for="ShippingCountry" class="control-label"></label></th>
                    </tr>
                </thead>
                <tbody>
                    <td>
                        <input asp-for="ShippingFirstName" class="form-control" />
                        <span asp-validation-for="ShippingFirstName" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="ShippingLastName" class="form-control" />
                        <span asp-validation-for="ShippingLastName" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="ShippingEmail" class="form-control" />
                        <span asp-validation-for="ShippingEmail" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="ShippingPhone" class="form-control" />
                        <span asp-validation-for="ShippingPhone" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="ShippingAddress" class="form-control" />
                        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="ShippingCity" class="form-control" />
                        <span asp-validation-for="ShippingCity" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="ShippingPostalCode" class="form-control" />
                        <span asp-validation-for="ShippingPostalCode" class="text-danger"></span>
                    </td>
                    <td>
                        <input asp-for="ShippingCountry" class="form-control" />
                        <span asp-validation-for="ShippingCountry" class="text-danger"></span>
                    </td>
                </tbody>
            </table>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control" rows="5" ></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    <p></p>
    <hr/>
    <a asp-action="Index" asp-controller="AdminOrderItem" asp-route-id="@Model.Id">Edit order items</a>
    <partial name="_OrderItemsPartial" for="@Model.OrderItems" />
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

